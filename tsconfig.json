{
  "extends": "astro/tsconfigs/strict",

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@images/*": ["src/images/*"],
      "@libs/*": ["src/libs/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@types": ["src/types/index"]
    },
    // "importsNotUsedAsValues": "error"
    "strictNullChecks": true,
    "allowJs": true
  }
}
