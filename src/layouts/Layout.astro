---
export interface Props {
  title: string;
}
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

import "../styles/global.css";

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Koki's homepage" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <meta name="generator" content={Astro.generator} />
    <meta name="og:title" content="Koki Miyakubo" />
    <meta property="og:type" content="website" />
    <meta
      property="og:image"
      content="https://resplendent-faloodeh-da4fb1.netlify.app/_astro/img-avatar.e138095a.png"
    />
    <title>{title}</title>
    <meta name="twitter:title" content="Koki Miyakubo" />
    <meta name="robots" content="noindex" />
    <link rel="preload" href="https://rsms.me/inter/inter.css" as="style">
    <meta name="view-transition" content="same-origin" />
    <script is:inline>
      // ダークモードの初期化スクリプト
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();
      if (theme === 'dark') document.documentElement.classList.add('dark');
    </script>
    <script>
      // ページ遷移時にスクロール位置をリセット
      document.addEventListener('astro:page-load', () => {
        window.scrollTo(0, 0);
      });
    </script>
  </head>
  <body
    class="relative min-h-screen bg-background-light dark:bg-background-dark w-full overflow-x-hidden"
  >
    <div class="relative flex flex-col min-h-screen animate-fade-in">
      <Header />
      <main class="flex-1 mx-auto w-full max-w-2xl px-6 sm:px-8">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
