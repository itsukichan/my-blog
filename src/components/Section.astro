---
interface Props {
  title: string;
  subtitle?: string;
  class?: string;
}

const { title, subtitle, class: className } = Astro.props;
---

<section class:list={["py-8 sm:py-12 animate-slide-in", className]}>
  <div class="mx-auto max-w-2xl px-6 sm:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-bold tracking-tight text-gray-800 dark:text-gray-100 sm:text-4xl">
        {title}
      </h2>
      {subtitle && (
        <p class="mt-2 text-lg leading-8 text-gray-600 dark:text-gray-300">
          {subtitle}
        </p>
      )}
    </div>
    <div class="mt-8 sm:mt-12">
      <slot />
    </div>
  </div>
</section>
