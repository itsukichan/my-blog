---
export interface Props {
  title: string;
  tag: string;
  href: string;
  updatedAt: string;
  keyVisual: string;
}

const { title, tag, href, updatedAt, keyVisual } = Astro.props;

const date = new Date(updatedAt);
const year = date.getFullYear();
const month = String(date.getMonth() + 1).padStart(2, '0');
const day = String(date.getDate()).padStart(2, '0');
const formattedDate = `${year}-${month}-${day}`;
---

<article class="flex flex-col items-start justify-between">
  <div class="relative w-full">
    <img
      src={keyVisual.url}
      alt="" class="aspect-[16/9] w-full rounded-2xl object-cover sm:aspect-[2/1] sm:aspect-[3/2]">
  </div>
  <div class="max-w-xl">
    <div class="mt-6 flex items-center gap-x-4 text-xs">
      <time datetime="2020-03-16" class="text-background-dark dark:text-background-light">{formattedDate}</time>
      <!-- <span class="text-background-dark dark:text-background-light bg-accent p-1">{tag}</span> -->
    </div>
    <div class="group relative">
      <h3 class="mt-3 text-lg font-semibold leading-6 text-background-dark dark:text-background-light">
        <a href={href}>
          <span class="absolute inset-0"></span>
          {title}
        </a>
      </h3>
    </div>
  </div>
</article>
